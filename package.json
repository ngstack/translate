{
  "name": "@ngstack/core",
  "description": "An open source toolkit for enterprise Angular applications.",
  "version": "2.3.2",
  "license": "MIT",
  "author": "Denys Vuika <denys.vuika@gmail.com>",
  "scripts": {
    "ng": "ng",
    "start": "ng build translate && ng serve",
    "build": "ng build",
    "test": "ng test translate --code-coverage",
    "test:ci": "ng test translate --watch=false --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "spellcheck": "cspell 'src/**/*.ts' 'e2e/**/*.ts' 'projects/**/*.ts'",
    "build:lib": "ng build translate",
    "build:prod": "ng build translate --prod && cp -r README.md dist/@ngstack/translate",
    "format:check": "prettier --check \"{src,projects}/**/*.{ts,js,css,scss,html}\"",
    "format:fix": "prettier --write \"src/{src,projects}/**/*.{ts,js,css,scss,html}\"",
    "size": "size-limit"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.2",
    "@angular/cdk": "^8.1.2",
    "@angular/common": "^8.2.2",
    "@angular/compiler": "^8.2.2",
    "@angular/core": "^8.2.2",
    "@angular/forms": "^8.2.2",
    "@angular/material": "^8.1.2",
    "@angular/platform-browser": "^8.2.2",
    "@angular/platform-browser-dynamic": "^8.2.2",
    "@angular/router": "^8.2.2",
    "hammerjs": "^2.0.8",
    "rxjs": "^6.5.4",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.25",
    "@angular-devkit/build-ng-packagr": "^0.803.25",
    "@angular/cli": "^8.3.25",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/language-service": "^9.0.7",
    "@size-limit/preset-small-lib": "^4.3.1",
    "@types/jasmine": "~3.5.9",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "~13.9.3",
    "codelyzer": "^5.2.1",
    "cspell": "^4.0.55",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.1",
    "karma-jasmine": "~3.1.1",
    "karma-jasmine-html-reporter": "^1.5.2",
    "karma-junit-reporter": "^2.0.1",
    "ng-packagr": "^5.7.1",
    "prettier": "^1.19.1",
    "protractor": "~5.4.3",
    "puppeteer": "^2.1.1",
    "size-limit": "^4.3.1",
    "ts-node": "~8.8.1",
    "tsickle": "^0.37.0",
    "tslib": "^1.11.1",
    "tslint": "~5.20.1",
    "typescript": "3.5.3"
  },
  "size-limit": [
    {
      "path": "dist/@ngstack/translate/bundles/ngstack-translate.umd.min.js",
      "limit": "5 KB",
      "webpack": false
    }
  ]
}

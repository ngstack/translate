{
  "name": "@ngstack/core",
  "description": "An open source toolkit for enterprise Angular applications.",
  "version": "7.0.0",
  "license": "MIT",
  "author": "Denys Vuika <denys.vuika@gmail.com>",
  "scripts": {
    "postinstall": "ngcc",
    "ng": "ng",
    "start": "ng build translate && ng serve --open",
    "build": "ng build translate --configuration=production && cp -r README.md dist/@ngstack/translate",
    "test": "ng test translate --code-coverage",
    "test:ci": "ng test translate --watch=false --code-coverage",
    "lint": "ng lint translate --format=stylish",
    "e2e": "ng e2e",
    "spellcheck": "cspell '{src,e2e,projects}/**/*.ts'",
    "format:check": "prettier --check \"{src,projects}/**/*.{ts,js,css,scss,html}\"",
    "format:fix": "prettier --write \"{src,projects}/**/*.{ts,js,css,scss,html}\"",
    "size": "size-limit",
    "clean": "rm -rf coverage dist node_modules"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.3.3",
    "@angular/cdk": "^13.3.3",
    "@angular/common": "^13.3.3",
    "@angular/compiler": "^13.3.3",
    "@angular/core": "^13.3.3",
    "@angular/forms": "^13.3.3",
    "@angular/material": "^13.3.3",
    "@angular/platform-browser": "^13.3.3",
    "@angular/platform-browser-dynamic": "^13.3.3",
    "@angular/router": "^13.3.3",
    "rxjs": "^6.6.7",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~13.3.4",
    "@angular-eslint/builder": "13.2.1",
    "@angular-eslint/eslint-plugin": "13.2.1",
    "@angular-eslint/eslint-plugin-template": "13.2.1",
    "@angular-eslint/schematics": "13.2.1",
    "@angular-eslint/template-parser": "13.2.1",
    "@angular/cli": "^13.3.4",
    "@angular/compiler-cli": "^13.3.3",
    "@angular/language-service": "^13.3.5",
    "@size-limit/preset-small-lib": "^4.12.0",
    "@types/jasmine": "~4.0.3",
    "@types/jasminewd2": "~2.0.9",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "cspell": "^5.20.0",
    "eslint": "^8.18.0",
    "jasmine-core": "~4.1.0",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "^6.3.19",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^13.3.1",
    "prettier": "^2.3.1",
    "protractor": "~7.0.0",
    "puppeteer": "^13.7.0",
    "size-limit": "^4.12.0",
    "ts-node": "~10.7.0",
    "tslib": "^2.4.0",
    "typescript": "4.6.4"
  },
  "size-limit": [
    {
      "path": "dist/@ngstack/translate/fesm2020/ngstack-translate.mjs",
      "limit": "5 KB",
      "webpack": false
    }
  ]
}
